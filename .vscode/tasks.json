{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-pthread",
        "-lstdc++fs",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lstdc++fs"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        //"echo": true,
        //"reveal": "silent",
        "focus": true,
        //"panel": "shared",
        //"showReuseMessage": true,
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "02 G++ Build",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-pthread",
        "-lstdc++fs",
        "-g",
        "${workspaceFolder}/Programming/Labs/02/C++/02.cpp",
        "-B",
        "${workspaceFolder}/Programming/Labs/02/C++/include",
        "-o",
        "${workspaceFolder}/Programming/Labs/02/C++/02",
        "-lstdc++fs"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        //"echo": true,
        //"reveal": "silent",
        "focus": true,
        //"panel": "shared",
        //"showReuseMessage": true,
        "clear": true
      }
    }
  ]
}